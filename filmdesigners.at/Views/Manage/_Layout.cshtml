@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("_ManageNav")
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <img src="~/images/Banner.svg" class="img-responsive">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
        
